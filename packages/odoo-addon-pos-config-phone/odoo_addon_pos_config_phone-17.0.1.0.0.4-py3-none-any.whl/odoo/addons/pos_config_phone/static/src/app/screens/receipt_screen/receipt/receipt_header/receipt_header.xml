<templates id="template" xml:space="preserve">
    <t
        t-name="ReceiptHeader"
        t-inherit="point_of_sale.ReceiptHeader"
        t-inherit-mode="extension"
    >
        <xpath expr="//t[@t-if='props.data.company.phone']" position="replace">
            <t t-if="props.data.pos_phone">
                <div>Tel:<t t-esc="props.data.pos_phone" /></div>
            </t>
        </xpath>
    </t>
</templates>
