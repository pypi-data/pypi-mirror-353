ğŸ§ª Sample Test

import unittest
from authnex import TokenManager

class TestAuthNex(unittest.TestCase):
    def test_token_generation(self):
        tm = TokenManager()
        token = tm.generate_token(1)
        self.assertTrue(tm.validate_token(token))

unittest.main()




