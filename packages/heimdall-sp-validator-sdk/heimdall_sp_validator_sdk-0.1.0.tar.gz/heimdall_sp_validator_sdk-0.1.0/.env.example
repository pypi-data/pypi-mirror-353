# AIF Service Provider Validator SDK Configuration
# Copy this file to .env and update with your values

# Core Service Configuration
AIF_CORE_SERVICE_URL=https://poc.iamheimdall.com
AIF_EXPECTED_ISSUER_ID=aif://poc-heimdall.example.com

# Service Provider Audiences (comma-separated if multiple)
AIF_SP_EXPECTED_AUDIENCES=my-service-api,another-service

# JWKS Caching Configuration
AIF_JWKS_CACHE_TTL_SECONDS=86400
AIF_JWKS_FETCH_TIMEOUT_SECONDS=10

# Revocation Checking
AIF_REVOCATION_CHECK_ENABLED=true
AIF_REVOCATION_TIMEOUT_SECONDS=5

# Validation Options
AIF_ALLOWED_ALGORITHMS=EdDSA
AIF_CLOCK_SKEW_SECONDS=60
AIF_REQUIRE_JTI=true

# Optional: Logging configuration
# PYTHONPATH=.
# LOG_LEVEL=INFO