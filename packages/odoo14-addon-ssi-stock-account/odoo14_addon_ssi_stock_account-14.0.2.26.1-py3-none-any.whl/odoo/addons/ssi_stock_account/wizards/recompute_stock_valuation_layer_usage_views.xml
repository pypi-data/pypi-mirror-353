<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<record id="recompute_stock_valuation_layer_usage_view_form" model="ir.ui.view">
    <field name="name">Recompute Stock Valuation Layer Usage</field>
    <field name="model">recompute_stock_valuation_layer_usage</field>
    <field name="arch" type="xml">
        <form>
            <group name="group_1" colspan="4" col="2">
                <field name="svl_id" invisible="1" />

            </group>
            <field name="allowed_svl_ids" invisible="1" />
            <field name="svl_ids" domain="[('id','in',allowed_svl_ids)]" />
            <footer>
                <button
                        string="Confirm"
                        name="action_confirm"
                        type="object"
                        class="oe_highlight"
                        confirm="Are you sure?"
                    />
                or
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
        </form>
    </field>
</record>

<record
        id="recompute_stock_valuation_layer_usage_from_warehouse_action"
        model="ir.actions.act_window"
    >
    <field name="name">Recompute Stock Valuation Layer Usage</field>
    <field name="res_model">recompute_stock_valuation_layer_usage</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="recompute_stock_valuation_layer_usage_view_form" />
    <field name="target">new</field>
    <field name="binding_model_id" ref="stock_account.model_stock_valuation_layer" />
    <field name="binding_view_types">form</field>
</record>

</odoo>
