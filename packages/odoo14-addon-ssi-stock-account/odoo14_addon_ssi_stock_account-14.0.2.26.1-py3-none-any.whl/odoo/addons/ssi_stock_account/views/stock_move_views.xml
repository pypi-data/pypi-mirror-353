<odoo>

<record id="stock_move_view_form" model="ir.ui.view">
    <field name="name">stock.move - form</field>
    <field name="model">stock.move</field>
    <field name="inherit_id" ref="stock.view_move_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//group[@name='linked_group']" position="after">
                <separator string="Stock Valuation Layer" colspan="2" />
                <field name="stock_valuation_layer_ids" />
                <group name="svl" colspan="4" col="2">
                    <field name="svl_total_amount" />
                </group>
                <group
                        name="accounting_setting"
                        string="Accounting Setting"
                        colspan="4"
                        col="2"
                    >
                    <group name="accounting_setting_1" colspan="1" col="2">
                        <field name="debit_usage_id" />
                        <field name="debit_account_id" />
                        <field name="credit_usage_id" />
                        <field name="credit_account_id" />
                    </group>
                    <group name="accounting_setting_2" colspan="1" col="2">
                        <field name="analytic_account_id" />
                    </group>
                </group>
                <field name="account_move_ids" />
                <group name="accounting_setting_3" colspan="4" col="2">
                    <field name="journal_entry_total_amount" />
                    <field name="svl_journal_entry_diff" />
                    <field name="abs_svl_journal_entry_diff" />
                </group>
            </xpath>
        </data>
    </field>
</record>



</odoo>
