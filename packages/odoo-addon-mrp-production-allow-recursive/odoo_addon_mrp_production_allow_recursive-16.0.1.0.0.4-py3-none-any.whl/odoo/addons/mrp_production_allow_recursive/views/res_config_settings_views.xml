<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_config_settings" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='mrp_reception_report']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="allow_same_product_component_finish" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_same_product_component_finish" />
                        <div class="text-muted">
                            Allow the same product to be used as both a component and a finished product
                            in manufacturing orders.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
