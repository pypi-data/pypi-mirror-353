# This needs to sync with codecraft/help_pats.py

global-exclude .DS_Store

# Include resource files
include codecraft/resources/model-settings.yml
include codecraft/resources/model-metadata.json
include codecraft/resources/__init__.py

# Include all coders submodules
recursive-include codecraft/coders *.py

recursive-exclude codecraft/website/examples *
recursive-exclude codecraft/website/_posts *

exclude codecraft/website/HISTORY.md
exclude codecraft/website/docs/benchmarks*.md
exclude codecraft/website/docs/ctags.md
exclude codecraft/website/docs/unified-diffs.md

exclude codecraft/website/install.ps1
exclude codecraft/website/install.sh

recursive-exclude codecraft/website/docs/leaderboards *
recursive-exclude codecraft/website/assets *
recursive-exclude codecraft/website *.js
recursive-exclude codecraft/website *.html
recursive-exclude codecraft/website *.yml
