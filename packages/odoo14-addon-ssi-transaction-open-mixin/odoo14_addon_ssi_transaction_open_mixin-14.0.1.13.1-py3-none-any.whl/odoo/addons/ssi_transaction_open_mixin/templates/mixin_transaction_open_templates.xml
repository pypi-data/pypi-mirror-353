<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<template id="open_policy_field">
    <field name="open_ok" />
</template>

<template id="button_open">
    <button
            name="action_open"
            string="Start"
            type="object"
            class="oe_highlight"
            attrs="{'invisible':[('open_ok','!=',True)]}"
            confirm="Start data. Are you sure?"
        />
</template>

<template id="tree_button_open">
    <button
            name="action_open"
            string="Start"
            type="object"
            confirm="Start data. Are you sure?"
        />
</template>

<template id="open_filter">
    <filter name="dom_open" string="In Progress" domain="[('state', '=', 'open')]" />
</template>
</odoo>
