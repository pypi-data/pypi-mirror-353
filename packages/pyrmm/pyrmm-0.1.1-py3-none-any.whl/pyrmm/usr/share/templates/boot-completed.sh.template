#!/system/bin/sh
# ${module_name} Boot Completed Script
# 此脚本在系统完全启动后执行

MODDIR=${0%/*}

# 等待BOOT_COMPLETED广播
while [ "$(getprop sys.boot_completed)" != "1" ]; do
    sleep 1
done

# 检查KernelSU环境
if [ "$KSU" = "true" ]; then
    log -p i -t "${module_id}" "Boot Completed: KernelSU环境"
else
    echo "[${module_id}] Boot Completed: Magisk环境" >> /dev/kmsg
fi

